<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ========== CRON JOB PARA VERIFICAR RANGOS VENCIDOS ========== -->
        <record id="ir_cron_check_expired_ecf_ranges" model="ir.cron">
            <field name="name">DGII: Verificar Rangos e-NCF Vencidos</field>
            <field name="model_id" ref="model_dgii_ecf_sequence_range"/>
            <field name="state">code</field>
            <field name="code">model.check_expired_ranges()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="priority">10</field>
            <field name="user_id" ref="base.user_admin"/>
        </record>

        <!-- ========== CRON JOB PARA ACTUALIZAR ESTADOS DGII ========== -->
        <record id="ir_cron_update_dgii_status" model="ir.cron">
            <field name="name">DGII: Actualizar Estados de e-CF</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_dgii_status()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
            <field name="priority">12</field>
            <field name="user_id" ref="base.user_admin"/>
        </record>
    </data>
</odoo>
